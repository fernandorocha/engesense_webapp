<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Engesense - Login</title>
  
  <!-- Google Fonts - Roboto -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  
  <!-- Material Design System -->
  <link rel="stylesheet" href="/css/design-system.css">
  
  <style>
    /* Login-specific styles */
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: var(--md-spacing-md);
    }
    
    .login-card {
      width: 100%;
      max-width: 400px;
      padding: var(--md-spacing-2xl);
      text-align: center;
    }
    
    .login-logo {
      margin-bottom: var(--md-spacing-xl);
    }
    
    .login-logo img {
      width: 120px;
      height: auto;
      border-radius: var(--md-radius-sm);
      box-shadow: var(--md-shadow-1);
    }
    
    .login-title {
      margin-bottom: var(--md-spacing-xl);
      color: var(--md-on-surface);
    }
    
    .login-form {
      display: flex;
      flex-direction: column;
      gap: var(--md-spacing-lg);
    }
    
    .login-input-group {
      text-align: left;
    }
    
    .login-button {
      margin-top: var(--md-spacing-sm);
    }
    
    .login-forgot {
      margin-top: var(--md-spacing-lg);
      text-align: center;
    }
    
    .login-forgot a {
      color: var(--md-primary);
      text-decoration: none;
      font-size: var(--md-font-size-body2);
      transition: color var(--md-transition-fast);
    }
    
    .login-forgot a:hover {
      color: var(--md-primary-dark);
      text-decoration: underline;
    }
    
    .login-error {
      background-color: rgba(176, 0, 32, 0.1);
      color: var(--md-error);
      padding: var(--md-spacing-md);
      border-radius: var(--md-radius-sm);
      border-left: 4px solid var(--md-error);
      margin-bottom: var(--md-spacing-lg);
      font-size: var(--md-font-size-body2);
      text-align: left;
    }
    
    /* Welcome animation */
    .login-card {
      animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Responsive adjustments */
    @media (max-width: 480px) {
      .login-card {
        padding: var(--md-spacing-xl);
        margin: var(--md-spacing-sm);
      }
    }
  </style>
</head>
<body>
  <div class="md-card login-card md-elevation-2">
    <div class="login-logo">
      <img src="/images/logo.jpg" alt="Engesense Logo">
    </div>

    <% if (error) { %>
      <div class="login-error">
        <strong>Authentication Error:</strong> <%= error %>
      </div>
    <% } %>

    <h1 class="md-headline-4 login-title">Welcome Back</h1>
    
    <form method="POST" action="/login" class="login-form">
      <div class="login-input-group">
        <label for="username" class="md-input-label">Username</label>
        <input
          id="username"
          name="username"
          type="text"
          class="md-input"
          placeholder="Enter your username"
          required
          autocomplete="username"
        />
      </div>
      
      <div class="login-input-group">
        <label for="password" class="md-input-label">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="md-input"
          placeholder="Enter your password"
          required
          autocomplete="current-password"
        />
      </div>
      
      <button type="submit" class="md-button md-button-filled md-button-large login-button">
        Log In
      </button>
    </form>

    <div class="login-forgot">
      <a href="/forgot-password">Forgot your password?</a>
    </div>
  </div>

  <!-- Theme System -->
  <script src="/css/theme-system.js"></script>
</body>
</html>
