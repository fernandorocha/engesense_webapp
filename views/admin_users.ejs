<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Engesense - User Management</title>
  
  <!-- Google Fonts - Roboto -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  
  <!-- Material Design System -->
  <link rel="stylesheet" href="/css/design-system.css">
  
  <style>
    /* Admin-specific styles */
    body {
      padding: var(--md-spacing-lg);
      min-height: 100vh;
    }
    
    .admin-container {
      max-width: 1000px;
      margin: 0 auto;
    }
    
    .admin-header {
      margin-bottom: var(--md-spacing-xl);
    }
    
    .admin-title {
      color: var(--md-primary);
      margin-bottom: var(--md-spacing-md);
    }
    
    .back-link {
      color: var(--md-primary);
      text-decoration: none;
      font-size: var(--md-font-size-body2);
      transition: color var(--md-transition-fast);
    }
    
    .back-link:hover {
      color: var(--md-primary-dark);
      text-decoration: underline;
    }
    
    .error-message {
      background-color: rgba(176, 0, 32, 0.1);
      color: var(--md-error);
      padding: var(--md-spacing-md);
      border-radius: var(--md-radius-sm);
      border-left: 4px solid var(--md-error);
      margin-bottom: var(--md-spacing-lg);
      font-size: var(--md-font-size-body2);
    }
    
    .section-title {
      color: var(--md-on-surface);
      margin-bottom: var(--md-spacing-lg);
      font-size: var(--md-font-size-h6);
      font-weight: var(--md-font-weight-medium);
    }
    
    .users-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: var(--md-spacing-2xl);
      font-size: var(--md-font-size-body2);
    }
    
    .users-table th {
      background-color: var(--md-surface-variant);
      color: var(--md-primary);
      padding: var(--md-spacing-md);
      text-align: left;
      font-weight: var(--md-font-weight-medium);
      border-bottom: 2px solid var(--md-outline);
    }
    
    .users-table td {
      padding: var(--md-spacing-md);
      border-bottom: 1px solid var(--md-outline-variant);
    }
    
    .users-table tr:hover {
      background-color: var(--md-surface-variant);
    }
    
    .create-user-form {
      display: flex;
      flex-wrap: wrap;
      gap: var(--md-spacing-md);
      align-items: end;
      padding: var(--md-spacing-lg);
      background-color: var(--md-surface-variant);
      border-radius: var(--md-radius-md);
    }
    
    .form-field {
      min-width: 150px;
      flex: 1;
    }
    
    .form-select {
      padding: var(--md-spacing-md);
      border: 1px solid var(--md-outline);
      border-radius: var(--md-radius-sm);
      background-color: var(--md-surface);
      color: var(--md-on-surface);
      font-family: var(--md-font-family);
      font-size: var(--md-font-size-body1);
      transition: all var(--md-transition-fast);
    }
    
    .form-select:focus {
      outline: none;
      border-color: var(--md-primary);
      box-shadow: 0 0 0 2px rgba(25, 118, 210, 0.12);
    }
    
    .create-button {
      white-space: nowrap;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      body {
        padding: var(--md-spacing-md);
      }
      
      .create-user-form {
        flex-direction: column;
        align-items: stretch;
      }
      
      .form-field {
        min-width: unset;
      }
      
      .users-table {
        font-size: var(--md-font-size-caption);
      }
      
      .users-table th,
      .users-table td {
        padding: var(--md-spacing-sm);
      }
    }
    
    @media (max-width: 480px) {
      .users-table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <header class="admin-header">
      <h1 class="md-headline-3 admin-title">User Management</h1>
      <p><a href="/dashboard" class="back-link">‚Üê Back to Dashboard</a></p>
    </header>

    <% if (error) { %>
      <div class="error-message">
        <strong>Error:</strong> <%= error %>
      </div>
    <% } %>

    <div class="md-card md-elevation-1" style="padding: var(--md-spacing-xl); margin-bottom: var(--md-spacing-xl);">
      <h2 class="section-title">Existing Users</h2>
      <table class="users-table">
        <thead>
          <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Organization</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.username %></td>
              <td>
                <span class="<%= u.role === 'admin' ? 'md-text-primary' : '' %>" style="font-weight: <%= u.role === 'admin' ? 'var(--md-font-weight-medium)' : 'var(--md-font-weight-regular)' %>;">
                  <%= u.role %>
                </span>
              </td>
              <td><%= u.organization %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="md-card md-elevation-1" style="padding: var(--md-spacing-xl);">
      <h2 class="section-title">Create New User</h2>
      <form method="POST" action="/admin/users" class="create-user-form">
        <div class="form-field">
          <label class="md-input-label" for="username">Username</label>
          <input 
            id="username"
            name="username" 
            class="md-input" 
            placeholder="Enter username" 
            required 
          />
        </div>
        
        <div class="form-field">
          <label class="md-input-label" for="password">Password</label>
          <input 
            id="password"
            name="password" 
            type="password" 
            class="md-input"
            placeholder="Enter password" 
            required 
          />
        </div>
        
        <div class="form-field">
          <label class="md-input-label" for="role">Role</label>
          <select id="role" name="role" class="form-select">
            <option value="client">Client</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        
        <div class="form-field">
          <label class="md-input-label" for="organization">Organization</label>
          <input 
            id="organization"
            name="organization" 
            class="md-input"
            placeholder="Enter organization" 
            required 
          />
        </div>
        
        <button type="submit" class="md-button md-button-filled create-button">
          <span class="md-icon md-icon-sm">üë§</span>
          Create User
        </button>
      </form>
    </div>
  </div>

  <!-- Theme System -->
  <script src="/css/theme-system.js"></script>
</body>
</html>
