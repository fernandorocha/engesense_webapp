<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Engesense - Energy Dashboard</title>
  
  <!-- Google Fonts - Roboto -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

  <!-- Flatpickr CSS for the calendar input -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_blue.css"
  />
  
  <!-- Material Design System -->
  <link rel="stylesheet" href="/css/design-system.css">
  
  <!-- Dashboard-specific styles -->
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
  <!-- Include Header -->
  <%- include('partials/header', { user: user }) %>

  <!-- Include Controls -->
  <%- include('partials/controls') %>

  <!-- Include Chart -->
  <%- include('partials/chart') %>

  <!-- Include Statistics -->
  <%- include('partials/stats') %>

  <!-- External Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <!-- Apache ECharts from CDN -->
  <script src="https://cdn.jsdelivr.net/npm/echarts@5.4.3/dist/echarts.min.js"></script>
  <!-- Fallback chart implementation when ECharts is not available -->
  <script src="/js/fallback-chart.js"></script>

  <!-- Dashboard Modules -->
  <script src="/js/dashboard-ui.js"></script>
  <script src="/js/dashboard-data.js"></script>
  <script src="/js/dashboard-charts.js"></script>
  <script src="/js/dashboard-stats.js"></script>
  
  <!-- Main Dashboard Controller -->
  <script src="/js/dashboard.js"></script>
</body>
</html>